@model HomeDetailsViewModel
@{
    ViewData["Title"] = "Details";
    ViewBag.Title = "學生詳情頁";
}
<h3>@ViewBag.PageTitle</h3>
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Student.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/banner.jpg" />
                <h4>學生ID : @Model.Student.Id</h4>
                <h4>信箱 : @Model.Student.Email</h4>
                <h4>主修科目名稱 : @Model.Student.Major</h4>
            </div>
            <div class="card-footer text-center">
                <a href="/home" class="btn btn-primary">返回</a>
                <a asp-controller="home" asp-action="index"  class="btn btn-primary">Tag Helper返回</a>
                <a href="#" class="btn btn-primary">编辑</a>
                <a href="#" class="btn btn-danger">删除</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}