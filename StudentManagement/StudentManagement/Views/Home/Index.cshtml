@model IEnumerable<Student>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "學生列表頁面";
}
<div class="card-deck">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>名字</th>
                <th>主修科目名稱</th>
                <th>功能</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>
                        @student.Id
                    </td>
                    <td>
                        @student.Name
                    </td>
                    <td>
                        @student.Major
                    </td>
                    <td>
                        <a href="#" class="btn btn-link">查看</a>
                        <a href="#" class="btn btn-link">编輯</a>
                        <a href="#" class="btn btn-link">删除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="card-deck">
    @foreach (var student in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@student.Name</h3>
            </div>
            <img class="card-img-top" src="~/images/banner.jpg" />
            <div class="card-footer text-center">
                <a href="/home/details/@student.Id" class="btn btn-primary">查看</a>
                <a asp-controller="home" asp-action="details" asp-route-id="@student.Id"  class="btn btn-primary">Tag Helper查看</a>
                <a href="#" class="btn btn-primary">编輯</a>
                <a href="#" class="btn btn-danger">删除</a>
            </div>
        </div>
    }
</div>
